{# galerie-photos.html.twig #}

<section id="galerie-photos" class="py-20 bg-gradient-to-b from-white to-gray-50 relative overflow-hidden">
    <!-- Éléments décoratifs -->
    <div class="absolute top-10 left-5 w-32 h-32 bg-yellow-500 opacity-5 rounded-full"></div>
    <div class="absolute bottom-10 right-5 w-40 h-40 bg-lime-500 opacity-5 rounded-full"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- En-tête de section -->
        <div class="text-center mb-12">
            <h2 class="text-base font-semibold tracking-wide text-lime-600 uppercase">Notre Galerie</h2>
            <p class="mt-1 text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight">
                En Images
            </p>
            <p class="max-w-xl mt-5 mx-auto text-xl text-gray-500">
                Découvrez notre foodtruck, nos plats et l'ambiance provençale à travers nos photos.
            </p>
        </div>

        <!-- Carousel de photos -->
        <div class="mt-10 relative">
            <!-- Conteneur du carousel -->
            <div id="photo-carousel" class="relative overflow-hidden rounded-xl shadow-xl">
                <!-- Images du carousel -->
                <div id="carousel-inner" class="flex transition-transform duration-500 ease-in-out">
                    {% for picture in pictures %}
                        <div class="carousel-item w-full flex-shrink-0 relative">
                            <img
                                    src="{{ asset(picture.url) }}"
                                    alt="Image carousel {{ loop.index }}"
                                    class="w-full h-96 object-cover"
                            >
                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent pointer-events-none"></div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Contrôles du carousel -->
                <button id="prev-btn" class=" cursor-pointer absolute top-1/2 left-4 transform -translate-y-1/2 bg-white/80 hover:bg-white text-gray-800 p-3 rounded-full shadow-md transition focus:outline-none focus:ring-2 focus:ring-lime-500 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    <span class="sr-only">Précédent</span>
                </button>

                <button id="next-btn" class="cursor-pointer absolute top-1/2 right-4 transform -translate-y-1/2 bg-white/80 hover:bg-white text-gray-800 p-3 rounded-full shadow-md transition focus:outline-none focus:ring-2 focus:ring-lime-500 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    <span class="sr-only">Suivant</span>
                </button>
            </div>

            <!-- Indicateurs de position -->
            <div id="carousel-indicators" class="flex justify-center mt-6 space-x-2">
                {% for picture in pictures %}
                    <button class="w-3 h-3 rounded-full {% if loop.first %}bg-lime-600{% else %}bg-gray-300{% endif %}" data-index="{{ loop.index0 }}" aria-label="Image {{ loop.index }}"></button>
                {% endfor %}
            </div>
        </div>

        <!-- Galerie miniature sous le carousel -->
        <div class="mt-10 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-2 md:gap-4">
            {% for picture in pictures %}
                <button class="thumbnail-btn focus:outline-none focus:ring-2 focus:ring-lime-500 rounded-md overflow-hidden {% if loop.first %}ring-2 ring-lime-600 opacity-100{% endif %}" data-index="{{ loop.index0 }}">
                    <img
                            src="{{ asset(picture.url) }}"
                            alt="Miniature {{ loop.index }}"
                            class="w-full h-16 md:h-24 object-cover"
                    >
                </button>
            {% endfor %}
        </div>

        <!-- Texte supplémentaire -->
        <div class="mt-16 text-center">
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                Notre équipe capture régulièrement des moments de notre aventure culinaire. Suivez-nous sur les réseaux sociaux pour encore plus de photos et de contenus exclusifs !
            </p>
            <div class="mt-6 flex justify-center space-x-6">
                <a href="#" class="text-gray-500 hover:text-lime-600 transition">
                    <span class="sr-only">Instagram</span>
                    <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd"></path>
                    </svg>
                </a>
                <a href="#" class="text-gray-500 hover:text-lime-600 transition">
                    <span class="sr-only">Facebook</span>
                    <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>

    <!-- JavaScript pour le carousel -->
    <script defer>
        document.addEventListener('DOMContentLoaded', function() {
            const carousel = document.getElementById('carousel-inner');
            const items = document.querySelectorAll('.carousel-item');
            const prevButton = document.getElementById('prev-btn');
            const nextButton = document.getElementById('next-btn');
            const indicators = document.querySelectorAll('#carousel-indicators button');
            const thumbnails = document.querySelectorAll('.thumbnail-btn');

            let currentIndex = 0;
            const itemCount = items.length;

            // Vérifier s'il y a des images
            if (itemCount === 0) {
                console.log('Aucune image trouvée dans le carousel');
                return;
            }

            // Fonction pour mettre à jour l'affichage du carousel
            function updateCarousel(index) {
                // S'assurer que l'index est dans les limites
                if (index < 0) index = itemCount - 1;
                if (index >= itemCount) index = 0;

                currentIndex = index;

                console.log('Mise à jour du carousel avec index:', currentIndex);

                // Déplacer le carousel
                carousel.style.transform = `translateX(-${currentIndex * 100}%)`;

                // Mettre à jour les indicateurs
                indicators.forEach((indicator, i) => {
                    if (i === currentIndex) {
                        indicator.classList.remove('bg-gray-300');
                        indicator.classList.add('bg-lime-600');
                    } else {
                        indicator.classList.remove('bg-lime-600');
                        indicator.classList.add('bg-gray-300');
                    }
                });

                // Mettre à jour les miniatures
                thumbnails.forEach((thumbnail, i) => {
                    if (i === currentIndex) {
                        thumbnail.classList.add('ring-2', 'ring-lime-600');
                        thumbnail.classList.add('opacity-100');
                    } else {
                        thumbnail.classList.remove('ring-2', 'ring-lime-600');
                        thumbnail.classList.remove('opacity-100');
                    }
                });
            }

            // Écouteurs d'événements pour les boutons
            prevButton.addEventListener('click', () => {
                updateCarousel(currentIndex - 1);
            });

            nextButton.addEventListener('click', () => {
                updateCarousel(currentIndex + 1);
            });

            // Écouteurs d'événements pour les indicateurs
            indicators.forEach((indicator, index) => {
                indicator.addEventListener('click', () => {
                    updateCarousel(index);
                });
            });

            // Écouteurs d'événements pour les miniatures
            thumbnails.forEach((thumbnail, index) => {
                thumbnail.addEventListener('click', () => {
                    updateCarousel(index);
                });
            });

            // Défilement automatique (optionnel)
            let autoplayInterval = setInterval(() => {
                updateCarousel(currentIndex + 1);
            }, 5000);

            // Arrêter le défilement automatique lors de l'interaction
            const carouselContainer = document.getElementById('photo-carousel');
            carouselContainer.addEventListener('mouseenter', () => {
                clearInterval(autoplayInterval);
            });

            carouselContainer.addEventListener('mouseleave', () => {
                autoplayInterval = setInterval(() => {
                    updateCarousel(currentIndex + 1);
                }, 5000);
            });

            // Gestion du swipe sur mobile
            let touchStartX = 0;
            let touchEndX = 0;

            carousel.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
            }, { passive: true });

            carousel.addEventListener('touchend', (e) => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, { passive: true });

            function handleSwipe() {
                if (touchEndX < touchStartX - 50) {
                    // Swipe vers la gauche
                    updateCarousel(currentIndex + 1);
                } else if (touchEndX > touchStartX + 50) {
                    // Swipe vers la droite
                    updateCarousel(currentIndex - 1);
                }
            }

            // Initialiser le carousel
            updateCarousel(0);
            console.log('Carousel initialisé avec', itemCount, 'images');
        });
    </script>
</section>