{# menu-section.html.twig #}

<section id="notre-carte" class="py-16 bg-beige">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- En-tête de section -->
        <div class="text-center mb-16">
            <p class="mt-1 text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight">
                Ventes à emporter
            </p>
            <p class="max-w-xl mt-5 mx-auto text-xl text-gray-500">
                De notre foodtruck à votre table : authenticité et produits frais à emporter.            </p>

            <!-- Séparateur décoratif -->
            <div class="flex justify-center mt-6">
                <div class="h-1 w-32 bg-gradient-to-r from-yellow-400 to-lime-500 rounded"></div>
            </div>
        </div>

        <!-- Grille des plats -->
        <div class="grid gap-8 md:grid-cols-3 lg:gap-12">
            {% for dishe in dishes %}
                <!-- Plat: {{ dishe.title }} -->
                <div class="group relative bg-white rounded-xl shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">

                    <!-- Image du plat avec badge de prix -->
                    <div class="relative h-64 w-full overflow-hidden">
                        <img
                                src="{{ asset('/uploads/dishes/' ~ dishe.pictureUrl) }}"
                                alt="{{ dishe.title }}"
                                class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700 ease-in-out"
                        >
                        <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent opacity-60"></div>

                        <!-- Badge de prix -->
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm text-lime-600 font-bold px-3 py-1.5 rounded-full shadow-md">
                            {{ dishe.price }} €
                        </div>
                    </div>

                    <!-- Contenu du plat -->
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-900 group-hover:text-lime-700 transition-colors duration-300">{{ dishe.title }}</h3>

                        <div class="mt-3 space-y-2">
                            <p class="text-gray-600 line-clamp-3 leading-relaxed">{{ dishe.description }}</p>

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Bouton "Voir toute la carte" -->
        <div class="text-center mt-12">
            <a href="{{ path('app_dishes') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-[#6F7456] transition">
                Découvrir toute notre carte
                <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>

    </div>
</section>