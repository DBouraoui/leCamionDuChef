{# footer.html.twig #}

<footer class="bg-lime-900 text-white">
    <!-- Séparateur décoratif -->
    <div class="w-full overflow-hidden">
        <svg class="w-full h-8 text-white" viewBox="0 0 1200 120" fill="currentColor" preserveAspectRatio="none">
            <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25"></path>
            <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5"></path>
            <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"></path>
        </svg>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <!-- Logo et nom -->
            <div class="mb-8 md:mb-0 text-center md:text-left">
                <div class="text-2xl font-bold text-white mb-2">
                    Saveurs de Provence
                </div>
                <p class="text-lime-200">
                    Le meilleur de la cuisine provençale, en mouvement
                </p>
            </div>

            <!-- Navigation -->
            <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-8 text-center md:text-left mb-8 md:mb-0">
                <a href="{{ path('app_home') }}" class="text-white hover:text-yellow-300 transition">Accueil</a>
                <a href="{{ path('app_contact') }}" class="text-white hover:text-yellow-300 transition">Nous contacter</a>
                <a href="{{ path('app_home') }}#notre-carte" class="text-white hover:text-yellow-300 transition">Notre carte</a>
                <a href="{{ path('app_home') }}#notre-histoire" class="text-white hover:text-yellow-300 transition">Notre histoire</a>
                {% if not app.user %}
                    <a href="{{ path('app_login') }}" class="text-white hover:text-yellow-300 transition">Connexion</a>
                {% endif %}
            </div>
        </div>

        <!-- Ligne de séparation -->
        <div class="border-t border-lime-800 my-8"></div>

        <!-- Informations légales de l'entreprise -->
        <div class="flex flex-col md:flex-row justify-between mb-8 pb-8 border-b border-lime-800">
            <div class="md:w-1/2 mb-6 md:mb-0">
                <h4 class="text-white font-semibold mb-3">Mentions légales</h4>
                <div class="flex flex-col gap-2 text-lime-200 text-sm">
                    <p>SAS, LE CAMION DU CHEF</p>
                    <p>SIRET : 93273737200015</p>
                    <p>Siège social : {{ adresse|default('2 LOT LES JARDINS NOTRE DAME 278 CHEMIN MONTEE NOTRE DAME 13160 CHATEAURENARD') }}</p>
                    <p>Capital social : {{ capital|default('4 000 €') }}</p>
                    <p>N° TVA Intracommunautaire : {{ tva|default('FR 69932737372') }}</p>
                </div>
            </div>
            <div class="md:w-1/2">
                <h4 class="text-white font-semibold mb-3">Informations complémentaires</h4>
                <div class="flex flex-col gap-2 text-lime-200 text-sm">
                    <p>Directeur de la publication : {{ directeur|default('Axel AMEDURI') }}</p>
                    <p>Hébergeur du site : {{ hebergeur|default('Chem. des Pardiaux, 63000 Clermont-Ferrand - France') }}</p>
                </div>
            </div>
        </div>

        <!-- Copyright et signature -->
        <div class="flex flex-col md:flex-row justify-between items-center text-lime-200 text-sm">
            <div>
                &copy; {{ "now"|date("Y") }} Saveurs de Provence. Tous droits réservés.
            </div>
            <div class="mt-4 md:mt-0">
                Site conçu par <span class="font-medium text-yellow-300">{{ site_author|default('MyRocket') }}</span>
            </div>
        </div>
    </div>

    <!-- Petit élément décoratif d'olivier -->
    <div class="bg-lime-950 py-3 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-lime-300 inline-block opacity-50" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
        </svg>
    </div>
</footer>