{% extends 'base.html.twig' %}

{% block title %}Nous contacté !{% endblock %}

{% block body %}
    <section id="contact" class="relative py-16 sm:py-24 bg-gradient-to-br from-amber-50 to-white">

        <div class="absolute top-0 right-0 w-1/3 h-1/3 opacity-10">
            <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="text-lime-900 w-full h-full">
